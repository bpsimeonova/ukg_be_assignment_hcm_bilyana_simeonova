@model UserViewModel

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">View Employee</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <form method="post" class="row">
            <input asp-for="Id" hidden />
            <div class="p-3">
                <div class="form-floating py-1 col-12">
                    <input asp-for="FirstName" disabled class="form-control border shadow" />
                    <label asp-for="FirstName" class="ms-2">First Name</label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="LastName" disabled class="form-control border shadow" />
                    <label asp-for="LastName" class="ms-2">Last Name</label>
                </div>
                <div class="form-floating py-1 col-12">
                    <select id="JobTitleId" asp-for="JobTitleId" disabled class="form-select border shadow" asp-items="Model.JobTitles">
                        <option disabled selected>--Select Job Title--</option>
                    </select>
                    <label asp-for="JobTitleId" class="ms-2">Job Title</label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="HireDate" type="date" disabled class="form-control border shadow" />
                    <label asp-for="HireDate" class="ms-2">Hire Date</label>
                </div>
                <div class="form-floating py-1 col-12">
                    <select id="SelectedEmploymentStatus" asp-for="SelectedEmploymentStatus" disabled class="form-select border shadow" asp-items="@(new SelectList(Model.EmploymentStatuses))">
                        <option disabled selected>--Select Employment Status--</option>
                    </select>
                    <label asp-for="SelectedEmploymentStatus" class="ms-2">Employment Status</label>
                </div>
                <div class="form-floating py-1 col-12">
                    <select id="ManagerId" asp-for="ManagerId" disabled class="form-select border shadow" asp-items="Model.Managers">
                        <option disabled selected>--Select Manager--</option>
                    </select>
                    <label asp-for="ManagerId" class="ms-2">Manager</label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="EntitledPaidLeaveDays" type="number" disabled class="form-control border shadow" />
                    <label asp-for="EntitledPaidLeaveDays" class="ms-2">Entitled Paid Leave Days</label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="AvailablePaidLeaveDays" type="number" disabled class="form-control border shadow" />
                    <label asp-for="AvailablePaidLeaveDays" class="ms-2">Available Paid Leave Days</label>
                </div>
                <div class="row pt-5">
                    <div class="col-6 col-md-3">
                        <a asp-controller="User" asp-action="Index" class="btn btn-success w-100">
                            <i class="bi bi-check-circle"></i> Back
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}