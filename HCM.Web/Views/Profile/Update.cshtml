@model ProfileViewModel

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">My Profile</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Id" hidden />
            <div class="col-10">
                <div class="p-3">
                    <div class="form-floating col-12">
                        <input asp-for="FirstName" class="form-control border shadow" />
                        <label asp-for="FirstName" class="ms-2">First Name</label>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-1 col-12">
                        <input asp-for="LastName" class="form-control border shadow" />
                        <label asp-for="LastName" class="ms-2">Last Name</label>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-1 col-12">
                        <input asp-for="DateOfBirth" type="date" class="form-control border shadow" />
                        <label asp-for="DateOfBirth" class="ms-2">Date of Birth</label>
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-1 col-12">
                        <select id="SelectedGender" asp-for="SelectedGender" class="form-select border shadow" asp-items="@(new SelectList(Model.Genders))">
                            <option disabled selected>--Select Gender--</option>
                        </select>
                        <label asp-for="SelectedGender" class="ms-2">Gender</label>
                        <span asp-validation-for="SelectedGender" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-1 col-12">
                        <input asp-for="PhoneNumber" class="form-control border shadow" />
                        <label asp-for="PhoneNumber" class="ms-2">Phone Number</label>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-1 col-12">
                        <input asp-for="Address" class="form-control border shadow" />
                        <label asp-for="Address" class="ms-2"></label>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-1 col-12">
                        <input asp-for="Picture" class="form-control border shadow" />
                        <input asp-for="PictureUrl" hidden class="form-control border shadow" />
                        <label asp-for="PictureUrl" class="ms-2">Picture</label>
                        <span asp-validation-for="PictureUrl" class="text-danger"></span>
                    </div>
                    <div class="row pt-5">
                        <div class="col-6 col-md-3">
                            <button type="submit" class="btn btn-success w-100">
                                <i class="bi bi-check-circle"></i> Update
                            </button>
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-controller="Dashboard" asp-action="Index" class="btn btn-secondary w-100">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-2 p-3">
                <img src="@Model.PictureUrl" width="100%"
                     style="border-radius:5px; border:1px solid #bbb9b9" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}